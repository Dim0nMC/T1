<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!-- Таблица пользователей -->
    <changeSet id="1" author="dmitry">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <!-- Таблица клиентов -->
    <changeSet id="2" author="dmitry">
        <createTable tableName="clients">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="client_id" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="first_name" type="VARCHAR(50)"/>
            <column name="middle_name" type="VARCHAR(50)"/>
            <column name="last_name" type="VARCHAR(50)"/>
            <column name="date_of_birth" type="DATE"/>
            <column name="document_type" type="VARCHAR(20)"/>
            <column name="document_id" type="VARCHAR(50)"/>
            <column name="document_prefix" type="VARCHAR(10)"/>
            <column name="document_suffix" type="VARCHAR(10)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="clients"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_clients_users"/>

        <addUniqueConstraint tableName="clients"
                             columnNames="user_id"
                             constraintName="uk_clients_user_id"/>

    </changeSet>

    <!-- Таблица продуктов -->
    <changeSet id="3" author="dmitry">
        <createTable tableName="products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="VARCHAR(10)">
                    <constraints nullable="false"/>
            </column>
            <column name="create_date" type="DATE"/>
            <column name="product_id" type="VARCHAR(20)"/>
        </createTable>
    </changeSet>

    <!-- Таблица ClientProduct -->
    <changeSet id="4" author="dmitry">
        <createTable tableName="client_products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="client_id" type="BIGINT"/>
            <column name="product_id" type="BIGINT"/>
            <column name="open_date" type="DATE"/>
            <column name="close_date" type="DATE"/>
            <column name="status" type="VARCHAR(20)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="client_products"
                                 baseColumnNames="client_id"
                                 referencedTableName="clients"
                                 referencedColumnNames="id"
                                 constraintName="fk_client_products_clients"/>

        <addForeignKeyConstraint baseTableName="client_products"
                                 baseColumnNames="product_id"
                                 referencedTableName="products"
                                 referencedColumnNames="id"
                                 constraintName="fk_client_products_products"/>

    </changeSet>

    <changeSet id="5" author="dmitry">
        <createTable tableName="blacklist_registry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="document_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="document_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
                <column name="blacklisted_at" type="TIMESTAMP">
                    <constraints nullable="false"/>
            </column>
            <column name="reason" type="VARCHAR(255)"/>
            <column name="blacklist_expiration_date" type="DATE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
