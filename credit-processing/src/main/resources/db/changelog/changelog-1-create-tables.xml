<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!-- Таблица ProductRegistry -->
    <changeSet id="1" author="dmitry">
        <createTable tableName="product_registry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="NUMERIC(5,2)"/>
            <column name="open_date" type="DATE"/>
        </createTable>
    </changeSet>

    <!-- Таблица PaymentRegistry -->
    <changeSet id="2" author="dmitry">
        <createTable tableName="payment_registry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_registry_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="payment_date" type="DATE"/>
            <column name="amount" type="NUMERIC(19,2)"/>
            <column name="interest_rate_amount" type="NUMERIC(19,2)"/>
            <column name="debt_amount" type="NUMERIC(19,2)"/>
            <column name="expired" type="BOOLEAN" defaultValue="false"/>
            <column name="payment_expiration_date" type="DATE"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="payment_registry"
                                 baseColumnNames="product_registry_id"
                                 referencedTableName="product_registry"
                                 referencedColumnNames="id"
                                 constraintName="fk_payment_registry_product_registry"/>
    </changeSet>

</databaseChangeLog>
